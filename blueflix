        // --- VARIAVEIS GLOBAIS ---
        let heroInterval;
        let currentHeroIndex = 0;

        // --- SISTEMA DE TOAST (DEMO) ---
        function showDemoToast(message) {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = 'bg-gray-800/90 backdrop-blur border-l-4 border-blue-500 text-white px-4 py-3 rounded shadow-2xl flex items-center gap-3 toast-enter font-medium text-sm pointer-events-auto min-w-[250px]';
            toast.innerHTML = `<i data-lucide="info" class="w-5 h-5 text-blue-400"></i><span>${message}</span>`;
            container.appendChild(toast);
            lucide.createIcons();
            setTimeout(() => {
                toast.classList.remove('toast-enter');
                toast.classList.add('toast-exit');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // --- LOGICA DO HERO CAROUSEL ---
        function startHeroRotation() {
            const trendingCourses = COURSES.filter(c => c.isTrending).slice(0, 5);
            if (trendingCourses.length === 0) return;

            // Limpa intervalo anterior se existir
            if (heroInterval) clearInterval(heroInterval);

            heroInterval = setInterval(() => {
                currentHeroIndex = (currentHeroIndex + 1) % trendingCourses.length;
                updateHero(trendingCourses[currentHeroIndex]);
            }, 5000); // Muda a cada 5 segundos
        }

        function updateHero(course) {
            const heroBg = document.getElementById('hero-bg-img');
            const heroTitle = document.getElementById('hero-title');
            const heroDesc = document.getElementById('hero-desc');
            const heroInfo = document.getElementById('hero-info-btn');
            const heroPlay = document.getElementById('hero-play-btn');

            if (!heroBg) return;

            // Fade out
            heroBg.style.opacity = 0;
            
            setTimeout(() => {
                // Update Data
                heroBg.src = course.image;
                heroTitle.textContent = course.title;
                heroDesc.textContent = course.description;
                
                // Update Button Click events
                heroInfo.setAttribute('onclick', `openModal(${course.id})`);
                heroPlay.setAttribute('onclick', `openModal(${course.id})`);

                // Re-trigger animations for text
                heroTitle.classList.remove('hero-content-anim');
                void heroTitle.offsetWidth; // trigger reflow
                heroTitle.classList.add('hero-content-anim');

                // Fade in
                heroBg.style.opacity = 0.6; // Opacidade base da imagem
                heroBg.style.transform = 'scale(1.0)';
                
                // Slight zoom effect start
                setTimeout(() => {
                    heroBg.style.transform = 'scale(1.1)';
                }, 50);

            }, 800);
        }

        // --- RENDERIZA√á√ÉO ---

        function renderHero() {
            // Pega o primeiro curso trending para come√ßar
            const trending = COURSES.filter(c => c.isTrending);
            const course = trending[0]; 
            currentHeroIndex = 0;

            // Inicia rota√ß√£o ap√≥s renderizar
            setTimeout(startHeroRotation, 100);

            return `
            <div class="relative h-[90vh] w-full bg-black overflow-hidden group">
                <!-- Background Image Layer -->
                <div class="absolute inset-0 w-full h-full">
                    <img id="hero-bg-img" src="${course.image}" alt="Featured" class="w-full h-full object-cover opacity-60 transition-all duration-[800ms] ease-in-out transform scale-110">
                    <div class="absolute inset-0 bg-gradient-to-r from-black via-black/60 to-transparent"></div>
                    <div class="absolute inset-0 bg-gradient-to-t from-[#141414] via-[#141414]/20 to-transparent"></div>
                </div>

                <!-- Content Layer -->
                <div class="absolute top-0 left-0 w-full h-full flex flex-col justify-center px-4 md:px-12 z-10 pt-20">
                    <div class="max-w-2xl space-y-6">
                        <div class="flex items-center gap-2 text-blue-400 font-bold tracking-[0.2em] text-xs uppercase animate-slideUp">
                            <span class="w-8 h-0.5 bg-blue-500 inline-block"></span>
                            <span>Destaque da Semana</span>
                        </div>
                        
                        <h1 id="hero-title" class="text-5xl md:text-7xl font-black leading-tight drop-shadow-2xl hero-content-anim text-white">
                            ${course.title}
                        </h1>
                        
                        <p id="hero-desc" class="text-lg text-gray-200 drop-shadow-md max-w-xl line-clamp-3 leading-relaxed hero-content-anim font-light" style="animation-delay: 0.1s">
                            ${course.description}
                        </p>
                        
                        <div class="flex items-center gap-4 mt-8 hero-content-anim" style="animation-delay: 0.2s">
                            <button id="hero-play-btn" onclick="openModal(${course.id})" class="flex items-center gap-3 px-8 py-4 bg-blue-600 text-white hover:bg-blue-700 rounded font-bold transition-all transform hover:scale-105 active:scale-95 shadow-lg shadow-blue-600/30 group/btn">
                                <i data-lucide="play" class="w-6 h-6 fill-current"></i>
                                <span class="group-hover/btn:translate-x-1 transition-transform">Assistir Agora</span>
                            </button>
                            <button id="hero-info-btn" onclick="openModal(${course.id})" class="flex items-center gap-3 px-8 py-4 bg-white/10 hover:bg-white/20 text-white rounded font-bold backdrop-blur-md transition-all transform hover:scale-105 border border-white/10">
                                <i data-lucide="info" class="w-6 h-6"></i>
                                Mais Info
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Progress Indicator (Visual only) -->
                <div class="absolute bottom-10 right-12 flex gap-2">
                     <div class="w-2 h-2 rounded-full bg-blue-500 animate-pulse"></div>
                     <div class="w-2 h-2 rounded-full bg-gray-600"></div>
                     <div class="w-2 h-2 rounded-full bg-gray-600"></div>
                </div>
            </div>
            `;
        }

        function createCourseCard(course) {
            return `
            <div onclick="openModal(${course.id})" class="course-card group relative flex-none w-[200px] md:w-[280px] aspect-video bg-gray-800 rounded-lg overflow-hidden cursor-pointer transition-all duration-300 hover:z-20 hover:scale-110 hover:shadow-2xl hover:shadow-black/50 border border-gray-800 hover:border-blue-500/50">
                <img src="${course.image}" loading="lazy" alt="${course.title}" class="w-full h-full object-cover opacity-90 group-hover:opacity-100 transition-transform duration-500">
                
                <!-- Progress Bar -->
                ${course.progress > 0 ? `
                <div class="absolute bottom-0 left-0 w-full h-1 bg-gray-700 z-10">
                    <div class="h-full bg-blue-500 shadow-[0_0_10px_rgba(59,130,246,0.8)]" style="width: ${course.progress}%"></div>
                </div>` : ''}

                <!-- Hover Content -->
                <div class="absolute inset-0 bg-gradient-to-t from-black via-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-4">
                    <h4 class="text-white font-bold text-sm mb-2 drop-shadow-md">${course.title}</h4>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-2 text-xs font-semibold">
                            <span class="text-green-400">${course.rating}</span>
                            <span class="text-gray-400 border border-gray-600 px-1 rounded">HD</span>
                        </div>
                        <div class="flex gap-2">
                            <div class="w-8 h-8 rounded-full bg-white text-black flex items-center justify-center hover:bg-blue-600 hover:text-white transition shadow-lg transform hover:scale-110">
                                <i data-lucide="play" class="w-3 h-3 fill-current ml-0.5"></i>
                            </div>
                            <div onclick="event.stopPropagation(); showDemoToast('Lista indispon√≠vel.')" class="w-8 h-8 rounded-full border border-gray-400 text-white flex items-center justify-center hover:bg-gray-800 hover:border-white transition transform hover:scale-110">
                                <i data-lucide="plus" class="w-4 h-4"></i>
                            </div>
                        </div>
                    </div>
                     <div class="mt-2 text-[10px] text-gray-400 line-clamp-1">
                        ${course.category} ‚Ä¢ ${course.duration}
                    </div>
                </div>
            </div>
            `;
        }

        function renderRows() {
            let html = '<div class="relative z-20 -mt-24 md:-mt-40 space-y-8 pb-10">';
            
            CATEGORIES.forEach((cat, index) => {
                let filteredCourses = [];
                if (cat.id === 'continue') filteredCourses = COURSES.filter(c => c.progress > 0);
                else if (cat.id === 'trending') filteredCourses = COURSES.filter(c => c.isTrending);
                else filteredCourses = COURSES.filter(c => c.category === cat.id || (cat.id === 'tech' && c.category === 'tech'));

                if (filteredCourses.length > 0) {
                    html += `
                    <div class="mb-2 relative group/row px-4 md:px-12 space-y-3">
                        <h2 class="text-lg md:text-xl font-bold text-gray-200 hover:text-white cursor-pointer transition inline-flex items-center gap-2 group-hover/row:text-blue-400">
                            ${cat.title} 
                            <span class="text-xs text-blue-500 opacity-0 group-hover/row:opacity-100 transition-opacity font-normal ml-2">Ver tudo ></span>
                        </h2>
                        
                        <div class="relative group">
                            <!-- Left Arrow -->
                            <div onclick="scrollRow('row-${index}', 'left')" class="absolute -left-4 md:left-0 top-0 bottom-0 z-30 m-auto h-full w-12 flex items-center justify-center cursor-pointer bg-black/50 backdrop-blur-sm text-white opacity-0 group-hover:opacity-100 transition-opacity hover:bg-black/80 hover:scale-110 rounded-r-lg">
                                <i data-lucide="chevron-left" class="w-8 h-8"></i>
                            </div>
                            
                            <!-- Scroll Container -->
                            <div id="row-${index}" class="flex gap-4 overflow-x-auto scrollbar-hide pb-8 pt-4 px-1 scroll-smooth snap-x">
                                ${filteredCourses.map(course => createCourseCard(course)).join('')}
                            </div>

                            <!-- Right Arrow -->
                            <div onclick="scrollRow('row-${index}', 'right')" class="absolute -right-4 md:right-0 top-0 bottom-0 z-30 m-auto h-full w-12 flex items-center justify-center cursor-pointer bg-black/50 backdrop-blur-sm text-white opacity-0 group-hover:opacity-100 transition-opacity hover:bg-black/80 hover:scale-110 rounded-l-lg">
                                <i data-lucide="chevron-right" class="w-8 h-8"></i>
                            </div>
                        </div>
                    </div>
                    `;
                }
            });
            html += '</div>';
            return html;
        }

