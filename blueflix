        // --- SISTEMA DE NAVEGA√á√ÉO ---
        function router(page) {
            const app = document.getElementById('app-content');
            const navLinks = document.querySelectorAll('#nav-links li');
            
            navLinks.forEach(link => {
                if(link.dataset.page === page) {
                    link.classList.add('text-white', 'font-bold');
                    link.classList.remove('text-gray-300');
                } else {
                    link.classList.remove('text-white', 'font-bold');
                    link.classList.add('text-gray-300');
                }
            });

            window.scrollTo(0, 0);

            if (page === 'home') {
                app.innerHTML = renderHero() + renderRows();
            } else if (page === 'admin') {
                app.innerHTML = renderAdmin();
            } else if (page === 'certificates') {
                app.innerHTML = renderCertificates();
            } else if (page === 'courses') {
                app.innerHTML = renderAllCourses();
            }

            lucide.createIcons();
        }

        // --- INTERA√á√ïES ---
        function scrollRow(elementId, direction) {
            const element = document.getElementById(elementId);
            if (element) {
                const scrollAmount = window.innerWidth * 0.7; // Scroll 70% of screen
                element.scrollBy({
                    left: direction === 'left' ? -scrollAmount : scrollAmount,
                    behavior: 'smooth'
                });
            }
        }

        window.addEventListener('scroll', () => {
            const nav = document.getElementById('navbar');
            if (window.scrollY > 50) {
                nav.classList.add('bg-[#141414]', 'shadow-lg', 'border-b', 'border-gray-800');
                nav.classList.remove('bg-gradient-to-b');
            } else {
                nav.classList.remove('bg-[#141414]', 'shadow-lg', 'border-b', 'border-gray-800');
                nav.classList.add('bg-gradient-to-b');
            }
        });

        function openModal(courseId) {
            const course = COURSES.find(c => c.id === courseId);
            if (!course) return;

            const modal = document.getElementById('course-modal');
            const panel = document.getElementById('modal-panel');
            const content = document.getElementById('modal-content');

            content.innerHTML = `
                <div class="relative h-[450px] w-full group">
